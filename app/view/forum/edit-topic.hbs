{{#>layout}}
<h1 class="mb-lg">
  {{#if editForm.value}}
    Редактирование темы
  {{else}}
    Добавить тему
  {{/if}}
</h1>
<form action="/forum/{{forum.key}}/{{editForm.url}}" method="post">
  <div class="mb-md">
    <label for="title" class="mb-sm">Название темы:</label>
    <input type="text" id="title" name="title" value="{{editForm.value.title}}" required>
  </div>
  <div class="mb-md">
    <label for="description" class="mb-sm">Описание:</label>
    <input type="text" id="description" name="description" value="{{editForm.value.description}}">
  </div>
  {{#unless editForm.value}}
    <div class="mb-md">
    <label for="message" class="mb-sm">Текст сообщения:</label>
    <textarea name="message" id="message" cols="30" rows="10" required></textarea>
    </div>
  {{/unless}}
  <div class="mb-md">
    <input type="checkbox" name="pinned" id="pinned" {{#if editForm.value.pinned}} checked{{/if}}>
    <label for="pinned" class="mb-sm">Прикрепить тему</label>
  </div>
  <div class="mb-md">
    <input type="checkbox" name="important" id="important" {{#if editForm.value.important}} checked{{/if}}>
    <label for="important" class="mb-sm">Важная тема</label>
  </div>
  <button>
    <i class="fas fa-check"></i>
    Сохранить
  </button>
  {{#if deleteTopicUrl}}
    <a href="/forum/{{deleteTopicUrl}}" class="button">
      <i class="far fa-trash-alt"></i>
      Удалить  
    </a>
  {{/if}}
</form>
{{/layout}}