{{#>layout}}
<table>
  <tbody>
    <tr>
      <td colspan="2">
        <img src="{{user.avatarUrl}}" alt="">
      </td>
    </tr>
    <tr>
      <td>Username:</td>
      <td>{{user.username}}</td>
    </tr>
    <tr>
      <td>Email:</td>
      <td>{{user.email}}</td>
    </tr>
    <tr>
      <td>Role:</td>
      <td>{{user.role}}</td>
    </tr>
    <tr>
      <td>Status:</td>
      <td>{{user.status}}</td>
    </tr>
    <tr>
      <td>Birthdate:</td>
      <td>{{user.birthdate}}</td>
    </tr>
    <tr>
      <td>Forum signature:</td>
      <td>{{user.forumSignature}}</td>
    </tr>
    <tr>
      <td>Biography:</td>
      <td>
        {{user.bio}}
      </td>
    </tr>
  </tbody>
</table>
<a href="/profile/edit">Edit</a>
{{/layout}}