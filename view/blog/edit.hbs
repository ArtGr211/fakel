{{#>layout}}
  <form action="{{editForm.url}}" method="POST">
    <div>
      <label for="title">Title:</label>
      <input type="text" name="title" id="title" value="{{editForm.value.title}}">
    </div>
    <div>
      <label for="text">Text:</label>
      <textarea name="text" id="text" cols="30" rows="10">{{editForm.value.text}}</textarea>
    </div>
    <div class="quill-editor"></div>
    <button>Send</button>
  </form>
{{/layout}}