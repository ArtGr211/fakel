{{#>layout}}
  <ul>
    {{#each articles}}
      <li>
        <h2>
          {{this.title}}
        </h2>
        <div>
          <em>
            {{this.text}}
          </em>
        </div>
        <div>
          <strong>{{this.author.username}}</strong>
        </div>
      </li>
    {{/each}}
  </ul>
{{/layout}}