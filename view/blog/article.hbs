{{#>layout}}
<h1>{{article.title}}</h1>
<div>
  {{#if access.edit}}
  <a href="/blog/{{article._id}}/edit">Edit</a>
  {{/if}}
  {{#if access.delete}}
  <a href="/blog/{{article._id}}/delete">Delete</a>
  {{/if}}
</div>
<div>
  <em>{{article.createdAtStr}}</em>
</div>
<hr>
{{article.text}}
<hr>
Author: {{article.author.username}}
<hr>
{{#if access.comments}}
{{>commentForm}}
<hr>
{{/if}}
{{>commentsList comments=article.comments}}
{{/layout}}