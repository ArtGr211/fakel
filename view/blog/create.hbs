{{#>layout}}
  <form action="/blog/create" method="POST">
    <div>
      <label for="title">Title:</label>
      <input type="text" name="title" id="title">
    </div>
    <div>
      <label for="text">Text:</label>
      <textarea name="text" id="text" cols="30" rows="10"></textarea>
    </div>
    <button>Send</button>
  </form>
{{/layout}}