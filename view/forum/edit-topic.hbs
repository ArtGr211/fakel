{{#>layout}}
<form action="/forum{{forum.key}}/{{formUrl}}" method="post">
  <div>
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" value="{{formValue.title}}" required>
  </div>
  <div>
    <label for="description">Description</label>
    <input type="text" id="description" name="description" value="{{formValue.description}}">
  </div>
  {{#unless formValue}}
  <div>
    <label for="message">Message</label>
    <textarea name="message" id="message" cols="30" rows="10" required></textarea>
  </div>
  {{/unless}}
  <div>
    <input type="checkbox" name="pinned" id="pinned"  {{#if formValue.pinned}} checked{{/if}}>
    <label for="pinned">Pinned</label>
  </div>
  <div>
    <input type="checkbox" name="important" id="important" {{#if formValue.important}} checked{{/if}}>
    <label for="important">Important</label>
  </div>
  <button>Submit</button>
</form>
{{/layout}}