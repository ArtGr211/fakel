{{#>layout}}
  <h1>
    {{forum.title}}
  </h1>
  <div class="forum-description mb-lg">
    {{forum.description}}
  </div>
  {{#if createTopicAccess}}
    <div class="mb-lg">
      <a href="/forum/{{forum.key}}/create">
        <i class="fas fa-plus-circle"></i>
        Создать тему
      </a>
    </div>
  {{/if}}
  <ul class="forum-topics mb-lg">
    {{#each forum.pinnedTopics}}
      {{>topicItem topic=this forum=../forum}}
    {{/each}}
  </ul>
  <ul class="forum-topics">
    {{#each forum.unpinnedTopics}}
      {{>topicItem topic=this forum=../forum}}
    {{/each}}
  </ul>
{{>pagination pagination=pagination}}
{{/layout}}